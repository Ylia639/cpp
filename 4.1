#include <iostream>

int main() {
    setlocale(LC_ALL, "rus");
    int arr[] = { 0, 6, 2, 3, 9, 5, 4, 1, 7, 8 }; 
    int n = sizeof(arr) / sizeof(arr[0]); 
    int assignments = 0; 
    std::cout << "Начальный массив: ";
    for (int i = 0; i < n; ++i)
        std::cout << arr[i] << " ";
    std::cout << ", assignments = " << assignments << std::endl;
    for (int i = 1; i < n; ++i) 
    {
        int key = arr[i];
        int j = i - 1;
        int c = 0; 
        while (j >= 0 && arr[j] > key) 
        {
            arr[j + 1] = arr[j];
            assignments++;
            j--;
            c++;
        }
        arr[j + 1] = key;
        assignments++;
        std::cout << i << ") ";
        for (int k = 0; k < n; ++k) 
        {
            std::cout << arr[k] << " ";
        }
        std::cout << ", k = " << i << ", c = " << c << std::endl;
    }
    std::cout << "Итоговый массив: ";
    for (int i = 0; i < n; ++i)
        std::cout << arr[i] << " ";
    std::cout << ", assignments = " << assignments << std::endl;

    return 0;
}
