#include <iostream>
#include <cmath>
#include <limits>
void prArr(int arr[], int size)
{
    for (int i = 0; i < size; i++)
    {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;
}

int main()
{
    setlocale(LC_ALL, "rus");
    int Arr[] = { 6, 9, 4, 8, 1, 3, 2, 5, 0, 7 };
    int n = sizeof(Arr) / sizeof(Arr[0]);
    int count = 0;

    for (int i = 0; i < n - 1; i++)
    {
        for (int j = 0; j < n - i - 1; j++)
        {
            if (Arr[j] > Arr[j + 1])
            {
                int b = Arr[j];
                Arr[j] = Arr[j + 1];
                Arr[j + 1] = b;
                count++;
                std::cout << count << ") ";
                prArr(Arr, n);
            }
        }
    }

    std::cout << "Общее количество перестановок: " << count;
}
